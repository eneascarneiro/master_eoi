<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
      version="3.1">
   <servlet>
      <servlet-name>servlet.Counter</servlet-name>
      <servlet-class>servlet.Counter</servlet-class>
      <load-on-startup>1</load-on-startup>
   </servlet>
   <servlet-mapping>
      <servlet-name>servlet.Counter</servlet-name>
      <url-pattern>/count/*</url-pattern>
   </servlet-mapping>

   <servlet>
      <servlet-name>servlet.Login</servlet-name>
      <servlet-class>servlet.Login</servlet-class>
      <load-on-startup>1</load-on-startup>
   </servlet>
   <servlet-mapping>
      <servlet-name>servlet.Login</servlet-name>
      <url-pattern>/login/*</url-pattern>
   </servlet-mapping>
   <servlet>
      <servlet-name>servlet.LibrosLeidos</servlet-name>
      <servlet-class>servlet.LibrosLeidos</servlet-class>
      <load-on-startup>1</load-on-startup>
   </servlet>
   <servlet-mapping>
      <servlet-name>servlet.LibrosLeidos</servlet-name>
      <url-pattern>/librosleidos/*</url-pattern>
   </servlet-mapping>

   <servlet>
      <servlet-name>servlet.Libros</servlet-name>
      <servlet-class>servlet.Libros</servlet-class>
      <load-on-startup>1</load-on-startup>
   </servlet>
   <servlet-mapping>
      <servlet-name>servlet.Libros</servlet-name>
      <url-pattern>/libros/*</url-pattern>
   </servlet-mapping>


   <servlet>
      <servlet-name>jspcount.jsp</servlet-name>
      <jsp-file>/jsp/jspcount.jsp</jsp-file>
   </servlet>
   <servlet-mapping>
      <servlet-name>jspcount.jsp</servlet-name>
      <url-pattern>/jspcount/*</url-pattern>
   </servlet-mapping>

   <servlet>
      <servlet-name>mostrarlibros.jsp</servlet-name>
      <jsp-file>/jsp/mostrarlibros.jsp</jsp-file>
   </servlet>
   <servlet-mapping>
      <servlet-name>mostrarlibros.jsp</servlet-name>
      <url-pattern>/mostrarlibros/*</url-pattern>
   </servlet-mapping>
   <servlet>
      <servlet-name>mostrardetalle.jsp</servlet-name>
      <jsp-file>/jsp/mostrardetalle.jsp</jsp-file>
   </servlet>
   <servlet-mapping>
      <servlet-name>mostrardetalle.jsp</servlet-name>
      <url-pattern>/mostrardetalle/*</url-pattern>
   </servlet-mapping>
   <servlet>
      <servlet-name>login.jsp</servlet-name>
      <jsp-file>/jsp/login.jsp</jsp-file>
   </servlet>
   <servlet-mapping>
      <servlet-name>login.jsp</servlet-name>
      <url-pattern>/loginfrm/*</url-pattern>
   </servlet-mapping>
   <servlet>
      <servlet-name>logout.jsp</servlet-name>
      <jsp-file>/jsp/logout.jsp</jsp-file>
   </servlet>
   <servlet-mapping>
      <servlet-name>logout.jsp</servlet-name>
      <url-pattern>/logoutfrm/*</url-pattern>
   </servlet-mapping>
</web-app>